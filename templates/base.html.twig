<html>
    <head>
        <meta charset="UTF-8">

        <title>{% block title %}The-Anti-Social-Network{% endblock %}</title>

        {% block stylesheets %}
            <link rel="icon" href="./favicon.ico">
            <link rel="stylesheet" type="text/css" href="{{ asset("../css/app.css") }}">
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css">
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        {% endblock %}
    </head>
    <body id="body">
        {% block header %}
            <nav class="navbar navbar-expand-lg navbar-light bg-dark">
                <span class="navbar-brand text-white">The Anti Social Network</span>
            </nav>
        {% endblock %}

        {% block content %}
            <div class="bodyColor bodyHeight">
                <div class="row">
                    <div class="col-sm-3 bodyHeight bg-red"></div>

                    <div class="col-sm-6 bodyHeight bg-blue">
                        {% block feed %}{% endblock %}
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <div class="media">
                                    <!--Inputs-->
                                    <a class="media-left" href="#fake">
                                        <img id="userpictext" alt="" class="media-object img-rounded" src="">
                                    </a>
                                </div>
                                <hr>
                            </div>

                            <div class="panel-body">
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-3 bodyHeight bg-yellow"></div>
                </div>
            </div>
        {% endblock %}

        {% block flashMessages %}
            {% for label, messages in app.flashes(['success', 'warning', 'notice']) %}
                {% for message in messages %}
                    <div class="flash flash-{{ label }}">
                        <div class="text-right">
                            <span aria-hidden="true"><i class="ra-times"></i></span>
                        </div>

                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endblock %}

        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
            <script src="{{ asset("../js/app.js") }}"></script>
        {% endblock %}
    </body>
</html>