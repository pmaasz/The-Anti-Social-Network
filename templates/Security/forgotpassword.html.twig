{% extends 'base.html.twig' %}

{% block content %}
<div class="container">
    <div class="row hw-100">
        <div class="col-md-12 m-auto">
            <div class="card" id="securityCard">
                <div class="card-header text-center">
                    <h1>Passwort vergessen</h1>
                </div>

                <div class="card-body" id="securityCardBody">
                    <div class="row mb-2">
                        <p class="col-md-12">
                            Wenn du eine E-Mail Adresse in deinem Profil hinterlegt hast dann kannst du hier ein Passwort anfordern.
                        </p>
                    </div>

                    <form action="{{ path('password') }}" method="post">
                        <div class="mb-3">
                            <div class="input-group">
                                <label class="sr-only">Username</label>
                                <input type="text" class="form-control" id="username" name="_username" placeholder="Username" required />
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="input-group">
                                <label class="sr-only">E-Mail Adresse</label>
                                <input type="email" class="form-control" id="email" name="_email" placeholder="E-Mail Adresse" required />
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-at"></i></span>
                                </div>
                            </div>
                        </div>

                        <div class="row securityFormLinks">
                            <div class="col-xs-12 col-md-12 text-right">
                                <a href="{{ path('login') }}" >Einloggen</a>
                            </div>
                        </div>

                        <div class="form-group mt-5">
                            <button class="btn btn-block btn-primary" type="submit" name="action">Account zur√ºcksetzen</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
