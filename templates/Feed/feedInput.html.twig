<div class="card mt-5">
    <div class="card-body"
        {{ form_start(form ,{'class': 'feed-form'}) }}

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    {{ form_widget(form.body) }}
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group">
                    {{ form_widget(form.media) }}
                </div>
            </div>
        </div>

        <div class="form-group mt-3" id="postButton">
            <button class="btn btn-block btn-primary" type="submit" name="action">posten</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>